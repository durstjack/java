<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
   
   
 <!--  on definit ici les redirections et plus comme avant au niveau du Bean ManagÃ© --> 
 <!--  un bloc navigation rule => from-view-id => navigation-case => from-outcome => to-view-id  -->
<navigation-rule>

 <from-view-id>index.xhtml</from-view-id>
	<navigation-case>
		<from-outcome>success</from-outcome>
		<to-view-id>reussi.xhtml</to-view-id>
	</navigation-case>
	<navigation-case>
		<from-outcome>error</from-outcome>
		<to-view-id>echec.xhtml</to-view-id>
	</navigation-case>
</navigation-rule>
    
    
</faces-config>
